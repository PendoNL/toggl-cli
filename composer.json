{
    "name": "pendonl/toggl-cli",
    "description": "Toggl CLI tools made using Laravel Zero.",
    "homepage": "https://pendo.nl",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/pendonl/toggl-cli/issues",
        "source": "https://github.com/pendonl/toggl-cli"
    },
    "authors": [
        {
            "name": "Joshua de Gier",
            "email": "info@pendo.nl"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ajt/guzzle-toggl": "^1.0",
        "laravel-zero/framework": "4.0.*",
        "vlucas/phpdotenv": "^2.4"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "~6.4",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-create-project-cmd": [
            "php application app:rename"
        ]
    },
    "bin": ["toggl"]
}
